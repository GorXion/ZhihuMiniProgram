/* pages/market/market.wxss */
.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-top: 40rpx;
}

.header .left {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

.header .left .title {
  font-size: 40rpx;
}

.header .left .date {
  font-size: 24rpx;
  color: #999;
}

.header .right {
  background: #eee;
  font-size: 24rpx;
  color: #999;
  width: 200rpx;
  height: 50rpx;
  border-radius: 25rpx;
  margin-right: 20rpx;
  padding-left: 20rpx;
}

swiper {
  height: 480rpx;
  border-bottom: 1rpx solid #eee;
}

.category {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 36rpx;
  border-bottom: 1rpx solid #eee;
}

.category-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.category-item image {
  width: 72rpx;
  height: 72rpx;
}

.category-item text {
  font-size: 24rpx;
  color: #666;
  padding-top: 16rpx;
}

.free {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-top: 40rpx;
}

.free .first {
  font-size: 40rpx;
}

.free .last {
  font-size: 24rpx;
  color: #999;
}

.cell {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: auto;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.cell image {
  border-radius: 10rpx;
}

.cell .left {
  display: flex;
  flex-direction: column;
}

.cell .title {
  font-size: 32rpx;
  padding-bottom: 10rpx;
}

.cell .intro {
  font-size: 24rpx;
  color: #999;
}

.search {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.5;
}

.search view {
  background: white;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search input {
  background: #eee;
  font-size: 24rpx;
  color: #999;
  width: 600rpx;
  height: 50rpx;
  border-radius: 25rpx;
  margin-right: 20rpx;
  padding-left: 20rpx;
}