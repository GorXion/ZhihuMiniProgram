/* pages/idea/idea.wxss */

.banner {
  height: 210rpx;
}

.banner .item {
  padding: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: auto;
  background-color: #eee;
}

.banner .content {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  background-color: #fff;
}

.content .label {
  padding: 20rpx;
  font-size: 28rpx;
  color: cyan;
}

.content .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
}

.bottom .left {
  display: flex;
  flex-direction: column;
}

.left .title {
  font-size: 28rpx;
  color: #333;
}

.left .tip {
  font-size: 24rpx;
  color: #666;
}

.bottom image {
  width: 100rpx;
  height: 80rpx;
  border-radius: 4rpx;
}

.user .header {
  height: auto;
  font-size: 28rpx;
  padding: 20rpx;
}

.user .item {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.user .item .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user .item .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.user .content {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  justify-content: flex-start;
  text-align: left;
}

.user .content .name {
  font-size: 28rpx;
  color: #333;
  padding-right: 30rpx;
}

.user .content .desc {
  font-size: 26rpx;
  color: #999;
}

.user .follow {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: cornflowerblue;
  margin-right: 30rpx;
  background: #eee;
  width: 120rpx;
  height: 64rpx;
  text-align: center;
  border-radius: 32rpx; 
}

.user .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.user .bottom .left {
  border: 1rpx solid #1E8AE8;
  color: #1E8AE8;
  background-color: #fff;
}

.user .bottom .right {
  color: white;
  text-align: center;
  background-color: #1E8AE8;
}

.user .bottom view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 240rpx;
  height: 48rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
}